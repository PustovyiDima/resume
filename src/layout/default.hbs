<!DOCTYPE html>
<html>

<head>
<title>
	{{page.tittle}}
</title>
<meta charset='utf-8' />
<link href='css/index.css' rel='stylesheet' />
</head>

<body>
	{{#with header}}
	<header>
	<div>
		{{#with name}}
		<h1>{{firstname}} {{lastname}}</h1>
		{{/with}}
	</div>
	<div>
		<b>{{position}}</b>
	</div>
	<br>
	<div>
		<em>
		{{salary}}
		</em>
	</div>
	<br>
	<div>
		<address>
		{{address}}
		</address>
	</div>
	<br />
	<hr />
	</header>
	{{/with}}
	

	{{> naw}}
	
	{{{body}}}

	{{> footer social=social firstname=firstname lastname=lastname }}
</body>
</html>

