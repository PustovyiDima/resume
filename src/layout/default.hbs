{{!--
Це леяут по замовчюванню, котрий вже містить базову структуру HTML документа
І котрий обгортає код container файлів для будь-яких ендпоїнтів
--}}
<!DOCTYPE html>
<html>

<head>
	<title>
		{{page.tittle}}
	</title>
	<meta charset='utf-8' />
	<link href='css/index.css' rel='stylesheet' />
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
		integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
</head>

<body class="py-3 px-5">
	{{#with header}}
	<header>
		<div class="mb-2">
			{{#with name}}
			<h1>{{firstname}} {{lastname}}</h1>
			{{/with}}
		</div>
		<div class="mb-2">
			<b>{{position}}</b>
		</div>

		<div class="mb-2">
			<em>
				{{salary}}
			</em>
		</div>

		<div class="mb-2">
			<address>
				{{address}}
			</address>
		</div>

		<hr class="my-5" />
	</header>
	{{/with}}


	<div class="mb-5">
		{{> naw}}
	</div>

	{{{body}}}

	{{> footer social=social firstname=firstname lastname=lastname }}

	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>