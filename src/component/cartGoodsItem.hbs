<div class="card col-12 p-1">
    <div class="card-body p-1 row g-3">
        <img src={{image}} alt="" class="col-2">
        <div class="col-5">
            <h4>{{name}}</h4>
            <p>{{description}}</p>
        </div>
        <div class="col-2 py-4">
            <div>{{price.title}}</div>
            <h3>{{price.value}}</h3>
        </div>
        <div class="col-1 pt-5">{{amount}}</div>
        <div class="col-2 pt-3">
            {{#each buttons}}
            <button class="btn mb-3 {{#if isPrimary}} btn-primary {{/if}} {{#if isDanger}} btn-outline-danger {{/if}}">
                {{text}}
            </button>
            {{/each}}
        </div>
    </div>
</div>