<div>
  {{#with main}}
  <main>
    <section>
      {{> title data="All skills: " big=true }}
      <ul>
        {{#each skills}}
        <li class="py-1">
          {{name}}
          {{#if point includeZero=true}} ({{point}}) {{/if}}
          {{#if isTop}} (top) {{/if}}
          {{#unless point includeZero=true}} (Не вивчаємо) {{/unless}}
          {{#unless point}} {{#if point includeZero=true}} (Зараз вивчаємо) {{/if}} {{/unless}}
        </li>
        {{/each}}
      </ul>
    </section>


    <section>
      {{> title data="My hobbies: " big=false }}
      <ol>
        {{#each hobbies}}
        <li class="py-1">
          {{name}}
          {{#if isMain}} (Favorite) {{/if}}
        </li>
        {{/each}}
      </ol>
    </section>

  </main>
  {{/with}}
</div>