<main>
    {{> title data=name big=true}}
    <br>
    <div>
        <p>{{description}}</p>
    </div>
    <div>
        <h3>History:</h3>
        <p>Founded by {{founder}} in {{year}} year</p>
    </div>
    <br>
    <hr>
    <br>
    <div>
        {{> title data="Types:" big=false}}
        <ul>
            {{#each types}}
                {{> list_this data=this class="badge text-bg-primary"}}
            {{/each}}
        </ul>
        
    </div>
    <br>
    <hr>
    <br>
    <div>
        {{> title data="Syntax:" big=false}}
        {{#with syntax}}
        <ul>
            <li>
                <span class="badge text-bg-secondary"><b>variables</b></span>
                
                <ul>
                    {{#each variables}}
                        {{> list_this data=this class="badge text-bg-primary"}}
                    {{/each}}
                </ul>
                
            </li>
            <li>
                <b>functions</b>
                <ul>
                    {{#each functions}}
                        {{> list_this data=this class="badge text-bg-primary"}}
                    {{/each}}
                </ul>
            </li>
            <li>
                <b>conditionals</b>
                <ul>
                    {{#each conditionals}}
                        {{> list_this data=this class="badge text-bg-primary"}}
                    {{/each}}
                </ul>
            </li>
            <li>
                <b>loops</b>
                <ul>
                    {{#each loops}}
                        {{> list_this data=this class="badge text-bg-primary"}}
                    {{/each}}
                </ul>
            </li>
            <li>
                <b>classes</b>
                <ul>
                    {{#each classes}}
                        {{> list_this data=this class="badge text-bg-primary"}}
                    {{/each}}
                </ul>
            </li>
        </ul>
        {{/with}}
    </div>
    <br><hr><br>
    <div>
        {{> title data="Features:" big=false}}
        <ul>
            {{#each features}}
                {{> list_this data=this class="badge text-bg-primary"}}
            {{/each}}
        </ul>
    </div>
    <br><hr><br>
    <div>
        {{> title data="Libraries:" big=false}}
        <ul>
            {{#each libraries}}
                {{> list_this data=this class="badge text-bg-primary"}}
            {{/each}}
        </ul>
    </div>
    <br><hr><br>
    <div>
        {{> title data="Tools:" big=false}}
       <ul>
            {{#each tools}}
                {{> list_this data=this class="badge text-bg-primary"}}
            {{/each}}
        </ul>
    </div>
    <br><hr><br>
    <div>
        {{> title data="community:" big=false}}
        <ul>
            {{#each community}}
            <li>                
                <a href="/">{{name}} ({{type}})</a>
            </li>
            {{/each}}
        </ul>
    </div>
</main>