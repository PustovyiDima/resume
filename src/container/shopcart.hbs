<main class="row p-4 g-4">
    {{> shop_header navigation=navigation links=links}}


    {{#with header}}
    <div class="col-12 p-0 ">
        <h1 class="mb-3">{{title}}</h1>
        <div class="mb-2">
            <a href={{button.link}} class="btn btn-outline-secondary btn-sm">{{button.text}}</a>
        </div>
    </div>
    {{/with}}
    <hr>
    {{#each goodsBlock}}
    {{> cartGoodsItem image=image name=name description=description price=price amount=amount buttons=buttons}}


    {{/each}}
    <hr>
    {{#with total}}
    <div class="col-12">
        <h2>{{title}}</h2>
        <div class="display-6 my-3"><b>{{amount}}</b></div>
        <div class="mb-3">{{delivery}}</div>
        {{#each buttons}}
        <div class="mb-3">
            <a href={{link}}
                class="btn {{#if isSuccess}} btn-success {{/if}} {{#if isOutline}} btn-outline-success {{/if}}">{{text}}</a>
        </div>
        {{/each}}
    </div>
    {{/with}}
    <hr>


    {{> shop_other_prod goodsOtherBlock=goodsOtherBlock}}

    <hr>
    {{> shop_subscripe subscribe=subscribe}}
    <hr>

    {{> shop_footer footer=footer link=link text=text}}
</main>