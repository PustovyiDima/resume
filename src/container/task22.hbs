<main>
    <h1 class="text-center">{{page_header.title}}</h1>
    <div class="text-center">
        <p>
            {{page_header.description}}
        </p>
    </div>
    <br>
    {{#with section}}
    <div class="card">
        <div class="card-body">
            <div class="display-6 text-end">
                {{about_us.title_list.main}}
            </div>
            <br>
            <h2 class="text-end">
                {{about_us.title_list.sub}}
            </h2>
            <br>
            <div>
                <button class="btn btn-outline-info">
                    {{about_us.button.text}}
                </button>
            </div>
        </div>
    </div>

    <br>
    {{#with advantage}}
    <div class="card">
        <div class="card-body">
            <div class="display-5 text-secondary">{{title}}</div>
            <br>
            {{#with efficiency}}
            <div class="card">
                <div class="card-body">
                    <div class="display-4 text-secondary">{{title}}</div>
                    <br>
                    <h6>{{sub_title}}</h6>
                    <br>
                    <div><p>{{description}}</p></div>
                    <br>
                    <div>
                        <button class="btn btn-outline-warning">
                            {{button}}
                        </button>
                    </div>
                </div>
            </div>
            {{/with}}
            <br>
            {{#with innovation}}
            <div class="card">
                <div class="card-body">
                    <div class="display-4 text-center text-secondary">{{title}}</div>
                    <br>
                    <h6 class="text-center">{{sub_title}}</h6>
                    <br>
                    <div><p class="text-center">{{description}}</p></div>
                    <br>
                    <div>
                        <button class="btn btn-outline-warning">
                            {{button}}
                        </button>
                    </div>
                </div>
            </div>
            {{/with}}
            <br>
            {{#with collaboration}}
            <div class="card">
                <div class="card-body">
                    <div class="display-4 text-end text-secondary">{{title}}</div>
                    <br>
                    <h6 class="text-end">{{sub_title}}</h6>
                    <br>
                    <div><p class="text-end">{{description}}</p></div>
                    <br>
                    <div>
                        <button class="btn btn-outline-warning">
                            {{button}}
                        </button>
                    </div>
                </div>
            </div>
            {{/with}}
        </div>
    </div>
    {{/with}}
    <br>
    {{#with agreement}}
    <div class="card">
        <div class="card-body">
            <div class="display-5">
                {{title}}
            </div>
            <br>
            {{#with info}}
            <div class="card">
                <div class="card-body">
                    <h5>{{sub_title}}</h5>
                    <br>
                    {{#with detail}}
                    <div class="card">
                        <div class="card-body">
                            <div><p>{{text}}</p></div>
                            <br>
                            <div>
                                <button class="btn btn-success">{{button}}</button>
                            </div>
                        </div>
                    </div>
                    {{/with}}
                </div>
            </div>
            {{/with}}
        </div>
    </div>
    {{/with}}
    {{/with}}
</main>

