<main class="row mt-3 ml-2">
    {{> shop_header navigation=navigation links=links}}


    {{> breadcrumb breadcrumb=breadcrumb url=url name=name}}

    {{#with productData}}
    <section class="col-7 pe-5 mb-3">
        <div class=" mb-3">
            <div class="card">
                <img src={{img}} alt="" class="card-img-top">
            </div>
        </div>
        {{#with info}}
        <div class="mb-2">
            <div class="card p-3">
                <h4 class="card-title ">{{title}}</h4>
                <p>{{about}}</p>
                <h3><b>{{price}}</b></h3>
                <div>
                    {{#each category}}
                    <span class="badge rounded-pill 
                        {{#if isHot}}  text-bg-warning {{/if}}
                        {{#if isNew}} text-bg-primary  {{/if}}
                        {{#if isBonus}} text-bg-info  {{/if}}
                        text-light ">
                        {{name}}
                    </span>
                    {{/each}}
                </div>
            </div>
        </div>
        {{/with}}
    </section>
    <section class="col-5 ">

        {{#with item}}
        <table class="table text-capitalize ">
            <thead>
                <tr>
                    {{#each head}}
                    <th>{{this}}</th>
                    {{/each}}
                </tr>
            </thead>
            <tbody>
                {{#each body}}
                <tr>
                    {{#each this}}
                    {{#if @first}}
                    <th>{{this}}</th>
                    {{else}}
                    <td>{{this}}</td>
                    {{/if}}
                    {{/each}}
                </tr>
                {{/each}}
            </tbody>
        </table>
        {{/with}}

        {{#with param}}
        <div class="mb-3">
            <div class="card">
                <div class="card-header">
                    {{title}}
                </div>
                <ul class="list-group list-group-flush">
                    {{#each list}}
                    <div class="list-group-item">{{this}}</div>
                    {{/each}}
            </div>
        </div>
        {{/with}}

        {{#if alert.isError}}
        <div class="alert  alert-danger px-2">{{alert.text}}</div>
        {{/if}}
    </section>
    <section class="col-12 mt-2 mb-5">
        <div class="card">
            <div class="card-body">
                {{#each actionList }}
                <button class="btn 
            {{#if isWarning}} btn-warning text-light{{/if}}
            {{#if isError}} btn-outline-danger {{/if}}
            {{#if isSuccess}} btn-success {{/if}}
            {{#if isGood}} btn-outline-success {{/if}}
             px-4 me-3">{{name}}</button>
                {{/each}}
            </div>
        </div>

    </section>
    {{/with}}

    <hr class="my-5">

    {{> shop_other_prod goodsOtherBlock=goodsOtherBlock}}

    <hr class="my-5">

    {{#with service}}
    <section class="col-12 ">
        <div class="card text-bg-success text-center text-light py-2">
            <h2>{{title}}</h2>
            <p>{{description}}</p>

            <div class="text-center my-2">
                {{#each buttons}}
                <a href={{link}} rel={{rel}} class="btn btn-primary">{{text}}</a>
                {{/each}}
            </div>

        </div>
    </section>
    {{/with}}

    <hr class="my-5">

    {{> shop_footer footer=footer link=link text=text}}



</main>